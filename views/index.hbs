    <style>
        @keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }

        @keyframes slideIn {
            from {
                transform: translateY(50px);
                opacity: 0;
            }
            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        .hero-content h1,
        .hero-content h2,
        .hero-content p,
        .cta-buttons,
        .social-proof {
            animation: fadeIn 1s ease-in-out;
        }

        .hero-content h1 {
            animation-delay: 0.2s;
        }

        .hero-content h2 {
            animation-delay: 0.4s;
        }

        .hero-content p {
            animation-delay: 0.6s;
        }

        .cta-buttons {
            animation-delay: 0.8s;
        }

        .social-proof {
            animation-delay: 1s;
        }

        .service-box,
        .skill-box,
        .testimonial-box {
            animation: slideIn 1s ease-in-out;
        }

        .service-box:nth-child(odd),
        .skill-box:nth-child(odd),
        .testimonial-box:nth-child(odd) {
            animation-delay: 0.2s;
        }

        .service-box:nth-child(even),
        .skill-box:nth-child(even),
        .testimonial-box:nth-child(even) {
            animation-delay: 0.4s;
        }
    </style>
</head>

